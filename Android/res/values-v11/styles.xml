<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Jaigiro" parent="Theme.AppCompat">
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>

    <style name="Jaigiro.NoActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress</item>
        <item name="indeterminateProgressStyle">@style/IndeterminateProgress</item>
        <item name="android:titleTextStyle">@style/Jaigiro.ActionBar.TitleTextStyle</item>
    </style>

    <style name="IndeterminateProgress" parent="@android:style/Widget.ProgressBar.Small" />

    <style name="Jaigiro.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button">
        <item name="android:minWidth">150dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ButtonSmall">
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ButtonBlue" parent="@style/Button">
        <item name="android:background">@color/button_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBeige" parent="@style/Button">
        <item name="android:background">@color/button_beige</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBeigeDark" parent="@style/Button">
        <item name="android:background">@color/button_beige_dark</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonSmallBlue" parent="@style/ButtonSmall">
        <item name="android:background">@color/button_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonSmallBeige" parent="@style/ButtonSmall">
        <item name="android:background">@color/button_beige</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBlack" parent="@style/Button">
        <item name="android:background">@color/button_beige</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AvatarProfile">
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="ProfileItem">
        <item name="android:textColor">@color/beige_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="nameTitle">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="normalText">
        <item name="android:textColor">@color/beige_text</item>
    </style>
    <!-- Copyright 2012 Square, Inc. -->
    <style name="CalendarTitle">
        <item name="android:textSize">@dimen/calendar_text_medium</item>
        <item name="android:textColor">@color/calendar_text_active</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalendarCell.DayHeader">
        <item name="android:textColor">@color/calendar_text_active</item>
        <item name="android:textSize">@dimen/calendar_text_small</item>
    </style>

    <style name="CalendarCell.CalendarDate">
        <item name="android:textSize">@dimen/calendar_text_medium</item>
        <item name="android:background">@drawable/calendar_bg_selector</item>
        <item name="android:textColor">@color/calendar_text_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.SelectDate" parent="@style/Theme.AppCompat.Light">
        <item name="android:editTextStyle">@style/Widget.EditText.Black</item>
    </style>

    <style name="Widget.EditText.Black" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>